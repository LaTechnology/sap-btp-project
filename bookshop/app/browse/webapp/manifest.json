{
    "_version": "1.8.0",
    "sap.app": {
     "id": "bookshop",                          // The same as we defined in our Component.js (the bookshop in bookshop.Component
     "type": "application",                     // specifies whether our app is a standalone application or another category of SAPUI5 component
     "title": "Browse Books",
     "description": "Find your favorite book",
     "dataSources": {                           // Mention how to interact with our oData service.
      "CatalogService": {
       "uri": "/api/browse/",
       "type": "OData",
       "settings": {
        "odataVersion": "4.0"
       }
      }
     }
    },
    "sap.ui5": {                               // declare the dependencies, the sap.fe.templates library, which contains Fiori Elements
     "dependencies": {
      "libs": {
       "sap.fe.templates": {}
      }
     },
     "models": {
      "": {
       "dataSource": "CatalogService",
       "settings": {
        "synchronizationMode": "None",
        "operationMode": "Server",           // Setting this to server means that Fiori Elements will append $filter and $orderby parameters to requests sent to our backend and the backend will handle all filtering and sorting
        "autoExpandSelect": true,            // FioriElements will automatically generate $expand and $select parameters when sending requests to the backend
        "earlyRequests": true,
        "groupProperties": {
         "default": {
          "submit": "Auto"
         }
        }
       }
      }
     },
     "routing": {                          // config file as itâ€™s how we tell our app to move from page to page
      "routes": [
       {
        "pattern": ":?query:",
        "name": "BooksList",
        "target": "BooksList"
       }
      ],
      "targets": {
       "BooksList": {
        "type": "Component",
        "id": "BooksList",
        "name": "sap.fe.templates.ListReport",
        "options": {
         "settings": {
          "entitySet": "Books",
          "controlConfiguration" : {
            "@com.sap.vocabularies.UI.v1.LineItem" : {
             "columns" : {
              "AddReviewColumn" : {
                "header" : "Add Review",
                "template" : "bookshop.custom.AddReview.AddReviewButton"
                }
              }
            }
          }     
         }
        }
       }
      }
     }
    },
    "sap.ui": {
     "technology": "UI5",
     "fullWidth": false
    }
   }