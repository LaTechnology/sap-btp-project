<mvc:View controllerName="ns.carshows.controller.carShows"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
 <Shell id="_IDGenShell1">
    <Page id="page" title="{i18n>title}">
 <content>
            <Table id="_IDGenTable1" items="{path: '/Car' , parameters: { 'expand' : 'noOfPassanger' }}" >
              <headerToolbar >
         <Toolbar>
            <Title text="{i18n>carListTitle}" />
            <ToolbarSpacer/>
            <SearchField 
               width="50%" 
               search=".onFilterCar"/>
         </Toolbar>
      </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1" >
                        <Label id="_IDGenLabel1" text="Id" ></Label>
                    </Column>
                     <Column id="_IDGenColumn2">
                        <Label id="_IDGenLabel2" text="carName"></Label>
                    </Column>
                    <Column id="_IDGenColumn3">
                    <Label id="_IDGenLabel3" text="manufactureDate"></Label>
                    </Column>
                       <!-- <Column id="_IDGenColumn4">
                    <Label id="_IDGenLabel4" text="noOfPpl"></Label>
                    </Column> -->
                   </columns>
                   <items>
                <ColumnListItem   type="Navigation"
                press=".onPress" id="_IDGenColumnListItem1" >
                        <cells>
                            <Text id="_IDGenText1" text="{Id}" ></Text>
                            <Text id="_IDGenText2" text="{carName}"></Text>
                            <Text id="_IDGenText3" text="{manufactureDate}"></Text>
                            <!-- <Text id="_IDGenText4" text="{noOfPassanger/noOfPpl}"></Text> -->
                        </cells>                    
                    </ColumnListItem>
                    <!-- <ObjectListItem>
                    <ObjectAttribute text="{noOfPassanger/noOfPpl}"/>
                    </ObjectListItem> -->
                </items>
            </Table>
        </content>   
        <footer>
        <Bar >
        <contentRight>
        <Button id="idbtnCreate" text="Create" press=".onAdd" icon="sap-icon://add"></Button>
        </contentRight>
        </Bar>
        </footer>
         </Page>
        </Shell>
</mvc:View>
