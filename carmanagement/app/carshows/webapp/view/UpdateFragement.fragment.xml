<core:FragmentDefinition
    controllerName="ns.carshows.controller.carShows"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
>
    <Dialog 
        id="UpdatecarDialog"
        title="UPDATE"
        visible="true"
    >
        <VBox class="edit">
            <!-- <Label text="ID:" />
            <Input 
                id="_IDLabel1"
                placeholder="id"  value="{/Id}"
            /> -->

            <Label text="Car Name:" />
            <Input
                id="_IDLabel2"
                placeholder="name" value="{/carName}"
            />

            <Label text="manufactureDate:" />
            <Input
                id="_IDLabel3"
                placeholder="model" value="{/manufactureDate}"
            />
            <Page class ="carfooter">
                <footer>
                    <Bar>
                        <contentRight>
                            <Button
                                text="Save"
                                icon="sap-icon://save"
                                press=".onUpdate"
                            />
                            <Button
                                text="Cancel"
                                icon="sap-icon://cancel"
                                press=".onCloseUpdateDialog"
                            />
                        </contentRight>
                    </Bar>
                </footer>
            </Page>
        </VBox>
    </Dialog>
</core:FragmentDefinition>