<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="helloDialog"
      title="Hello {/recipient/name}">
      <content>
       <!-- it will change the icon in dialog box -->
         <core:Icon
            src="sap-icon://bus-public-transport"             
            size="8rem"
            class="sapUiMediumMargin"/>
      </content>
        <beginButton>
         <Button
            text="{i18n>dialogCloseButtonText}"
            press=".onCloseDialog"/>
      </beginButton>
      </Dialog>
</core:FragmentDefinition>