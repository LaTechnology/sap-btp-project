<mvc:View
    xmlns:table="sap.ui.table"
    controllerName="my.carshowroom.controller.Carsdetails"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>detailsTitle}"
    >
        <VBox
            alignItems="Center"
            justifyContent="Center"
            height="100%"
            width="100%"
            class="sapUiContentPadding"
        >
            <Text
                text="Car Name : {carName}"
                class="bigFont"
            />
            <Text
                text="Car Model : {carModel}"
                class="bigFont"
            />
            <Text
                text="Engine Type : {engineType}"
                class="bigFont"
            />
            <Text
                text="Car Model : {modelYear}"
                class="bigFont"
            />

            <Image
                src="{carImage}"
                alt="Car Lable"
                width="100px"
                height="100px"
            />
        </VBox>
    </Page>
</mvc:View>
