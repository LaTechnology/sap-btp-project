<mvc:View
    controllerName="my.carshowroom.controller.Cars"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        titleAlignment="Center"
    >
        <content>
            <ObjectHeader
                responsive="true"
                title="{i18n>title}"
                intro="Welcome To Car Showroom"
                icon="sap-icon://car-rental"
            />

            <!-- Toggle Switch for Theme -->
            <!-- <FlexBox justifyContent="Start" alignItems="Center"> -->
            <!-- <Text text="Theme :" /> -->
            <!-- <Switch
                state="{/darkTheme}"
                change="onThemeToggleChange"
            /> -->
            <!-- <items> -->
            <!-- <Button text="Add Car" press="onRightButtonPress" /> -->
            <!-- </items>  -->
            <!-- </FlexBox> -->

            <Bar>
                <contentRight>
                    <Text text="Dark Theme :" />

                    <Switch
                        id="mySwitch"
                        state="true"
                        change="onThemeToggleChange"
                    >
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>

                    <!-- <Button
                        id="b1"
                        text="Toggle Footer"
                        press="toggleFooter"
                    />
                    <ToggleButton
                        id="togid"
                        text="Hide Footer"
                        icon="sap-icon://hide"
                        press="toggleVisibility"
                    />

                    <OverflowToolbar style="Clear">
                        <ToolbarSpacer />
                        <Button
                            type="Accept"
                            text="Accept"
                        />
                        <Button
                            type="Reject"
                            text="Reject"
                        />
                    </OverflowToolbar> -->

                    <!-- <Switch 
                        
                        id="mySwitch"
                        state="{/darkTheme}"
                        change="onThemeToggleChange"
                    /> -->
                </contentRight>

                <contentMiddle>
                    <Button
                        text="Add Car"
                        icon="sap-icon://car-rental"
                        press=".onOpenDialog"
                        type="Emphasized"
                    />
                </contentMiddle>
            </Bar>

            <Table
                id="_IDGenTable1"
                items="{/cars}"
            >
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar1">
                        <Title
                            id="_IDGenTitle1"
                            text="{i18n>carListTitle}"
                        />
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <SearchField
                            id="_IDGenSearchField1"
                            width="50%"
                            search=".onFilterCar"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1">
                        <Label
                            id="_IDGenLabel1"
                            text="List"
                        />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Label
                            id="_IDGenLabel2"
                            text="Car Name"
                        />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Label
                            id="_IDGenLabel3"
                            text="Car Model"
                        />
                    </Column>
                    <Column id="_IDGenColumn4">
                        <Label
                            id="_IDGenLabel4"
                            text="Engine Type"
                        />
                    </Column>
                    <Column id="_IDGenColumn5">
                        <Label
                            id="_IDGenLabel5"
                            text="Model Year"
                        />
                    </Column>
                    <Column id="_IDGenColumn6">
                        <Label
                            id="_IDGenLabel6"
                            text="Update Action"
                        />
                    </Column>
                    <Column id="_IDGenColumn7">
                        <Label
                            id="_IDGenLabel7"
                            text="Delete Action"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItem1"
                        press="onPress"
                        type="Navigation"
                    >
                        <cells>
                            <Text
                                id="_IDGenText1"
                                text="{ID}"
                            />
                            <Text
                                id="_IDGenText2"
                                text="{carName}"
                            />
                            <Text
                                id="_IDGenText3"
                                text="{carModel}"
                            />
                            <Text
                                id="_IDGenText4"
                                text="{engineType}"
                            />
                            <Text
                                id="_IDGenText5"
                                text="{modelYear}"
                            />

                            <Button
                                text="Updata"
                                icon="sap-icon://edit"
                                press=".onOpenUpdateDialog"
                                type="Emphasized"
                            />

                            <Button
                                text="Delete"
                                icon="sap-icon://delete"
                                press="onDelete"
                                type="Emphasized"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
