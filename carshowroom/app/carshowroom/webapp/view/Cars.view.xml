<mvc:View
    controllerName="my.carshowroom.controller.Cars"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
        titleAlignment="Center"
    >
        <content>
            <ObjectHeader
                responsive="true"
                title="{i18n>title}"
                intro="{i18n>intro}"
                icon="sap-icon://car-rental"
            />

            <!-- Toggle Switch for Theme -->
            <!-- <FlexBox justifyContent="Start" alignItems="Center"> -->
            <!-- <Text text="Theme :" /> -->
            <!-- <Switch
                state="{/darkTheme}"
                change="onThemeToggleChange"
            /> -->
            <!-- <items> -->
            <!-- <Button text="Add Car" press="onRightButtonPress" /> -->
            <!-- </items>  -->
            <!-- </FlexBox> -->

            <Bar>
                <contentLeft>
                    <Text text="Language" />
                    <Select
                        forceSelection="true"
                        change="onChangeLanguage"
                    >
                        <core:ListItem
                            key="en"
                            text="English"
                        />
                        <core:ListItem
                            key="ta"
                            text="Tamil"
                        />
                        <core:ListItem
                            key="ja"
                            text="Japanese"
                        />
                        <core:ListItem
                            key="de"
                            text="German"
                        />
                    </Select>
                </contentLeft>

                <contentRight>
                    <Text text="{i18n>theme}" />

                    <Switch
                        id="mySwitch"
                        state="false"
                        change="onThemeToggleChange"
                    >
                        <layoutData>
                            <FlexItemData growFactor="1" />
                        </layoutData>
                    </Switch>
                </contentRight>

                <contentMiddle>
                    <Button
                        text="{i18n>addcar}"
                        icon="sap-icon://car-rental"
                        press=".onOpenDialog"
                        type="Emphasized"
                    />
                </contentMiddle>
            </Bar>

            <Table
                id="_IDGenTable1"
                items="{/cars}"
            >
                <headerToolbar>
                    <Toolbar id="_IDGenToolbar1">
                        <Title
                            id="_IDGenTitle1"
                            text="{i18n>carListTitle}"
                        />
                        <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                        <SearchField
                            id="_IDGenSearchField1"
                            width="50%"
                            search=".onFilterCar"
                        />
                    </Toolbar>
                </headerToolbar>
                <columns>
                    <Column id="_IDGenColumn1">
                        <Label
                            id="_IDGenLabel1"
                            text="List"
                        />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Label
                            id="_IDGenLabel2"
                            text="{i18n>carname}"
                        />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Label
                            id="_IDGenLabel3"
                            text="{i18n>carmodel}"
                        />
                    </Column>
                    <Column id="_IDGenColumn4">
                        <Label
                            id="_IDGenLabel4"
                            text="{i18n>enginetype}"
                        />
                    </Column>
                    <Column id="_IDGenColumn5">
                        <Label
                            id="_IDGenLabel5"
                            text="{i18n>modelyear}"
                        />
                    </Column>
                    <Column id="_IDGenColumn6">
                        <Label
                            id="_IDGenLabel6"
                            text="{i18n>update}"
                        />
                    </Column>
                    <Column id="_IDGenColumn7">
                        <Label
                            id="_IDGenLabel7"
                            text="{i18n>delete}"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItem1"
                        press="onPress"
                        type="Navigation"
                    >
                        <cells>
                            <Text
                                id="_IDGenText1"
                                text="{ID}"
                            />
                            <Text
                                id="_IDGenText2"
                                text="{carName}"
                            />
                            <Text
                                id="_IDGenText3"
                                text="{carModel}"
                            />
                            <Text
                                id="_IDGenText4"
                                text="{engineType}"
                            />
                            <Text
                                id="_IDGenText5"
                                text="{modelYear}"
                            />

                            <Button
                                text="{i18n>updateAction}"
                                icon="sap-icon://edit"
                                press=".onOpenUpdateDialog"
                                type="Emphasized"
                            />

                            <Button
                                text="{i18n>deleteAction}"
                                icon="sap-icon://delete"
                                press="onDelete"
                                type="Emphasized"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
