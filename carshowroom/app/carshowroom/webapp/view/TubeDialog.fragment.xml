<core:FragmentDefinition
    controllerName="my.carshowroom.controller.Varient"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="TubeDialog"
        title="{carName} car"
    >
        <VBox
            alignItems="Center"
            justifyContent="Start"
        >
            <Image
                src="{carImage}"
                alt="Car Lable"
                width="100px"
                height="100px"
            />
        </VBox>

        <Bar>
            <contentLeft>
                <Title
                    text="Tube Details"
                    level="H1"
                    titleStyle="H3"
                />
            </contentLeft>
        </Bar>

        <List
            items="{path: 'tyres', parameters: {expand: 'tubeDetails'}}"
        >
            <ObjectListItem>
                <attributes>
                    <ObjectAttribute
                        class="bigFont1"
                        text="{tubeDetails/tubeBrand}"
                    />
                </attributes>
            </ObjectListItem>
        </List>

        <beginButton>
            <Button
                text="{i18n>TubeCloseButtonText}"
                press=".onCloseDialog"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
