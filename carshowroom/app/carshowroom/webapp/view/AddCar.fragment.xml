    <Dialog
        id="AddcarDialog"
        title="Add Car"
        visible="true"
    >
        <VBox class="edit">
            <Label
                required="true"
                text="ID:"
            />
            <Input
                required="true"
                id="Label1"
                value="{}"
                placeholder="id"
            />

            <Label
                required="true"
                text="Car Name:"
            />
            <Input
                required="true"
                id="Label2"
                value="{}"
                placeholder="name"
            />

            <Label
                required="true"
                text="Car Model:"
            />
            <Input
                required="true"
                id="Label3"
                value="{}"
                placeholder="model"
            />

            <Label
                required="true"
                text="Engine Type:"
            />
            <Input
                required="true"
                id="Label4"
                value="{}"
                placeholder="type"
            />

            <Label
                required="true"
                text="Model Year:"
            />
            <Input
                required="true"
                id="Label5"
                value="{}"
                placeholder="modelyear"
            />

            <Page class="carfooter">
                <footer>
                    <Bar>
                        <contentRight>
                            <Button
                                text="Save"
                                icon="sap-icon://save"
                                press="onSubmitFormPress"
                            />
                            <Button
                                text="Cancel"
                                icon="sap-icon://cancel"
                                press=".onCloseDialog"
                            />
                        </contentRight>
                    </Bar>
                </footer>
            </Page>

            <!-- <Button
                text="Submit"
