<mvc:View
	controllerName="customer.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	busyIndicatorDelay="0">
	<Page
		id="customerPage"
		title="{i18n>Details Of} {FirstName} {LastName}"
		showNavButton="true"
		navButtonPress=".onNavBack"
		
		class="sapUiResponsiveContentPadding">
		<content>
			<Panel
				id="customerPanel"
				width="auto"
				class="sapUiNoContentPadding">
				<headerToolbar>
					<Toolbar>
						<Title text="{i18n>CustomerID : }{Id}" level="H2"/>
					</Toolbar>
				</headerToolbar>
				<content>
					<f:SimpleForm>
						<f:content>
							<Label text="{i18n>ID}" />
							<Text text="{Id}" id="Id"/>
							<Label text="{i18n>FirstName}"/>
							<Text text="{FirstName}"/>
							<Label text="{i18n>LastName}"/>
							<Text text="{LastName}"/>
							<Label text="{i18n>Email}"/>
							<Text text="{email}"/>
							<Label text="{i18n>Phone Number}"/>
							<Text text="{phoneNumber}"/>
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
		</content>
		 <footer>
            <Bar >
                <contentRight>
                    <Button id="idbtnEdit" text="Edit" press="onEdit" icon="sap-icon://edit"></Button>
					<Button id="idbtnCancel" text="Delete" press="onDelete" icon="sap-icon://decline"></Button>
                
                </contentRight>
            </Bar>
         </footer> 
	</Page>
</mvc:View>
