<mvc:View xmlns:unified="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    controllerName="ns.propose.controller.ClientView">
<Page id="page">
<Bar>
        <contentLeft>
            <Title
                text="Customer Details"
                level="H1"
                titleStyle="H3"
            />
        </contentLeft>
    </Bar>
    <List >
        <ObjectListItem>
            <attributes>
                <ObjectAttribute
                    class="bigFont"
                    title="Customer ID"
                    text="{id}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Name of the Customer"
                    text="{name}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Customer Website"
                    text="{website}"
                />

            </attributes>
        </ObjectListItem>
    </List>
    

<Bar class="space1">
        <contentLeft>
            <Title
                text="Customer Contact Details"
                level="H1"
                titleStyle="H3"
            />
        </contentLeft>
    </Bar>
    <List items="{path: 'PS_CUSTOMER_ORG_CONTACT'}">
        <ObjectListItem>
            <attributes>
                <ObjectAttribute
                    class="bigFont"
                    title="Address ID"
                    text="{id}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Address Line1"
                    text="{addressLine1}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Address Line2"
                    text="{addressLine2}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Address Line3"
                    text="{addressLine3}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="City"
                    text="{city}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Pincode"
                    text="{pincode}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="State"
                    text="{state}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Country"
                    text="{country}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Person1 Mobile Number"
                    text="{contact_person_1_mobileNumber}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Person1 Email Id"
                    text="{contact_person_1_emailId}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Person2 Mobile Number"
                    text="{contact_person_2_mobileNumber}"
                />

                <ObjectAttribute
                    class="bigFont"
                    title="Person2 Email Id"
                    text="{contact_person_2_emailId}"
                />

            </attributes>
        </ObjectListItem>
    </List>
    

<footer>
            <Bar >
                <contentRight>
                <Button text="Back" press="onBack" icon="sap-icon://nav-back" type="Emphasized"></Button>
                <Button text="Save and Continue" press="onSaveandContinue" type="Success" icon="sap-icon://accept" />
                </contentRight>
            </Bar>
         </footer> 

    </Page>
</mvc:View>
