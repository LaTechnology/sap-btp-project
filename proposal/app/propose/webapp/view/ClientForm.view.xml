<mvc:View xmlns:unified="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    controllerName="ns.propose.controller.ClientForm">

    <Page id="_IDGenPage1">
    <customHeader>
                <OverflowToolbar id="_IDGenOverflowToolbar1">
                    <Bar id="_IDGenBar1">
                        <contentLeft>
                            <Image id="_IDGenImage1"
                                src="{i18n>headerImage1}"
                                width="100%"
                                height="400%"
                            />
                        </contentLeft>

                        <contentMiddle>
                            <Text id="_IDGenText1" text="{i18n>headerTitle}" />
                        </contentMiddle>
                    </Bar>
                </OverflowToolbar>
            </customHeader>
        <content>
            <IconTabBar class="sapUiSmallMarginBottom sapUiResponsiveContentPadding" id="iconTabBar">
                <items>
                    <IconTabFilter id="_IDGenIconTabFilter1"
                        text="Client Detail"
                        class="sapUiSmallMarginBottom sapUiResponsiveContentPadding"
                        iconColor="NonInteractive">
                        <!-- Client Details Form -->
                        <f:SimpleForm
                            id="clientForm"
                            title="Client Details"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false">
                            <f:content>
                            <VBox id="_IDGenVBox1" >
                                <Label id="_IDGenLabel1" text="Client ID" />
                                <Input editable="true" width="18%" id="id" value="{id}"/>
                                <Label id="_IDGenLabel2" text="Name of the Client" />
                                <Input width="18%" id="name" value="{name}"/>
                                <!-- <Label id="_IDGenLabel3" text="Logo" />
                                <Input width="18%" id="logo" value="{logo}"/> -->
                                <Label id="_IDGenLabel4" text="Client Website" />
                                <Input width="18%" id="website" value="{website}"/>
                                </VBox>
                            </f:content>
                        </f:SimpleForm>     
                        <Bar id="_IDGenBar3" >
                        <contentRight>                        <!-- Next Button to move to the Contact Detail tab -->
                        <Button id="_IDGenButton3" text="Next" press="onNextClientDetails" type="Accept" icon="sap-icon://arrow-right"/>
                        </contentRight>


</Bar>
                    </IconTabFilter>

                    <IconTabFilter id="_IDGenIconTabFilter2"
                        text="Client Contact Detail"
                        class="sapUiSmallMarginBottom sapUiResponsiveContentPadding"
                        iconColor="NonInteractive"
                        key="contactTab">
                        <!-- Contact Details Form -->
                        <f:SimpleForm
                            id="contactForm"
                            title="Client Contact Details"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false">
                            <f:content>
                            <VBox id="_IDGenVBox2">
                    <Label id="_IDGenLabel5" text="Address ID" />
                    <Input width="18%" id="ID" value="{proposalOwnerContact>id}"/>
                    <Label id="_IDGenLabel6" text="AddressLine1" />
                    <Input width="35%" id="addressLine1" value="{proposalOwnerContact>addressLine1}"/>
                    <Label id="_IDGenLabel7" text="AddressLine2" />
                    <Input width="35%" id="addressLine2" value="{proposalOwnerContact>addressLine2}"/>
                    <Label id="_IDGenLabel8" text="AddressLine3" />
                    <Input width="35%" id="addressLine3" value="{proposalOwnerContact>addressLine3}"/>
                    <Label id="_IDGenLabel9" text="City" />
                    <Input width="35%" id="city" value="{proposalOwnerContact>city}"/>
                    </VBox>
                    <VBox id="_IDGenVBox3" >
                    <Label id="_IDGenLabel10" text="Pincode" />
                    <Input width="35%" id="pincode" value="{proposalOwnerContact>pincode}"/>
                    <Label id="_IDGenLabel11" text="State" />
                    <Input width="35%" id="state" value="{proposalOwnerContact>state}"/>
                    <Label id="_IDGenLabel12" text="Country" />
                    <Input width="35%" id="country" value="{proposalOwnerContact>country}"/>
                    </VBox>
                    </f:content>
                </f:SimpleForm>
                <Bar id="_IDGenBar2" >
                <contentRight>
                <Button id="_IDGenButton4" text="Next" press="onNextContact1Details" type="Accept" icon="sap-icon://arrow-right"/>
                </contentRight>
                </Bar>
                    </IconTabFilter>

                    <IconTabFilter id="_IDGenIconTabFilter3"
                        text="Client ContactPerson1 Detail"
                        class="sapUiSmallMarginBottom sapUiResponsiveContentPadding"
                        iconColor="NonInteractive"
                        key="contactTab1">
                        <!-- Contact Details Form -->
                        <f:SimpleForm
                            id="contact1Form"
                            title="Client Person1 Details"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false">
                            <f:content>
                            <VBox id="_IDGenVBox4">
                    <Label id="_IDGenLabel13" text="Person1 MobileNumber" />
                    <Input width="18%" id="contact_person_1_mobileNumber" value="{proposalOwnerContact>contact_person_1_mobileNumber}"/>
                    <Label id="_IDGenLabel14" text="Person1 TelePhoneNumber" />
                    <Input width="18%" id="contact_person_1_telephoneNumber" value="{proposalOwnerContact>contact_person_1_telephoneNumber}"/>
                    <Label id="_IDGenLabel15" text="Person1 EmailID" />
                    <Input width="18%" id="contact_person_1_emailId" value="{proposalOwnerContact>contact_person_1_emailId}"/>
                     </VBox>
                    </f:content>
                </f:SimpleForm>
                <Bar id="_IDGenBar4" >
                <contentRight>
                                <Button id="_IDGenButton5" text="Next" press="onNextContact2Details" type="Accept" icon="sap-icon://arrow-right"/>

                </contentRight>
                </Bar>
                    </IconTabFilter>


                    <IconTabFilter id="_IDGenIconTabFilter4"
                        text="Client ContactPerson2 Detail"
                        class="sapUiSmallMarginBottom sapUiResponsiveContentPadding"
                        iconColor="NonInteractive"
                        key="contactTab2">
                        <!-- Contact Details Form -->
                        <f:SimpleForm
                            id="contact2Form"
                            title="Client Person2 Details"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="3"
                            labelSpanL="3"
                            labelSpanM="3"
                            labelSpanS="12"
                            adjustLabelSpan="false">
                            <f:content>
                            <VBox id="_IDGenVBox5">
                    <Label id="_IDGenLabel16" text="Person2 MobileNumber" />
                    <Input width="18%" id="contact_person_2_mobileNumber" value="{proposalOwnerContact>contact_person_2_mobileNumber}"/>
                    <Label id="_IDGenLabel17" text="Person2 TelePhoneNumber" />
                    <Input width="18%" id="contact_person_2_telephoneNumber" value="{proposalOwnerContact>contact_person_2_telephoneNumber}"/>
                    <Label id="_IDGenLabel18" text="Person2 EmailID" />
                    <Input width="18%" id="contact_person_2_emailId" value="{proposalOwnerContact>contact_person_2_emailId}"/>
                    <Label id="_IDGenLabel19" text="Proposal Client ID" />
                    <Input width="18%" id="proposalOwner" value="{proposalOwnerContact>proposalOwner}"/>
                    </VBox>

                    </f:content>
                </f:SimpleForm>
                <Bar id="_IDGenBar5">
                <contentRight>
                                 <Button id="_IDGenButton1" text="Save" press="onSave" type="Accept" icon="sap-icon://accept"/>
                <Button id="_IDGenButton2" text="View" visible="false" press="onView" type="Emphasized" icon="sap-icon://biometric-face"/>

                </contentRight>
                </Bar>
                    </IconTabFilter>
     
                </items>
            </IconTabBar>

        </content>
    </Page>
</mvc:View>
