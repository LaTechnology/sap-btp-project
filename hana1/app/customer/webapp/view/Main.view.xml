<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" 
controllerName="ns.customer.controller.Main" displayBlock="true">

<Shell>
<App>
<pages>
    
    <Page id="page" title="{i18n>title}">


    
    <content>

    <Bar>
    
    <contentMiddle >
    
    <Text text="List of Customers" class="sapUiLargeMargin"/>
    </contentMiddle>
    
    </Bar>
   <Table items="{ path :'/customer'}" id="table001" mode="MultiSelect" class="sapUiLargeMargins" >


   
 

    <columns >
    
    <Column  >
    
    <Label text="Customer ID" width="20%" />
    
 
    
    </Column>

     <Column > 
    
    <Label text="First Name" width="20%"/>
    
    
    </Column>

     
    </columns>


    <items>
    
    <ColumnListItem type="Navigation" press="nextpage">
    
    <cells>
    
    <Text text="{customerId}" id="tex01"/>
    <Text text="{customerFirstName}" id="tex02"/>
   
    </cells>
    
    </ColumnListItem>
    </items>
    
</Table> 
    </content>


    <customHeader>


        <Bar class="sapContrastPlus" ariaLabelledBy="__label1" id="bar0">


            <contentLeft>


                <Image src="https://emotions.ae/wp-content/uploads/2019/07/sap-basis-courses-in-dubai.jpg" width="07%" class="sapUiLargeMargins"/>


            </contentLeft>

            <contentRight>

            <OverflowToolbar id="fbar1">

                        <ToolbarSpacer id="toba"/>
                         <SearchField id="se1" width="50%" class="rightAlignSearchField" placeholder="customer id" search="onSearchCustomerId"/>   
                        <Button id="b1" icon="sap-icon://detail-view" press="onOpenVieweDialog"/>
                        <Button id="b2" icon="sap-icon://add" press="onCreateProduct"/>
                        <Button id="b3" icon="sap-icon://edit" press="onOpenUpdateDialog"/>
                        <Button id="b4" icon="sap-icon://delete" press="onDeleteProduct"/>
                         <Button id="b5" icon="sap-icon://synchronize" press="onRefresh"></Button>
                    </OverflowToolbar>
            
            
            </contentRight>


        </Bar>


    </customHeader>

   


    </Page>

     </pages>

    </App>

    </Shell>
</mvc:View>