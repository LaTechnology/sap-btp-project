<mvc:View controllerName="ns.hanacrud.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">

       <headerContent>
                    <OverflowToolbar id="fbar1">
                        <ToolbarSpacer id="toba" />
                         <SearchField
                            id="se1"
                            width="50%"
                            class="rightAlignSearchField"               
                            placeholder="customer id"
                            search="onSearchCustomerId"
                            />   
                        <Button id="b1" icon= "sap-icon://detail-view" press="onOpenVieweDialog" />
                        <Button id="b2" icon= "sap-icon://add" press="onCreateProduct" />
                        <Button id="b3" icon= "sap-icon://edit" press="onOpenUpdateDialog" />
                        <Button id="b4" icon= "sap-icon://delete" press="onDeleteProduct" />
                       
                    </OverflowToolbar>
                </headerContent>
    
    <content>
   <Table items="{ path :'/customer'}" id="table001">
 

    <columns >
    
    <Column >
    
    <Label text="Customer ID"></Label>
 
    
    </Column>

     <Column >
    
    <Label text="First Name"></Label>
    
    
    </Column>

     <Column >
    
    <Label text="Last Name"></Label>
    
    
    </Column>
    </columns>


    <items >
    
    <ColumnListItem type="Navigation" press=".nextpage">
    
    <cells>
    
    <Text text="{customerId}"></Text>
    <Text text="{customerFirstName}"></Text>
    <Text text="{customerLastName}"></Text>
    </cells>
    
    </ColumnListItem>
    </items>
    
</Table> 
    </content>
    
    </Page>
        
</mvc:View>
