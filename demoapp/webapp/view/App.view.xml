<mvc:View xmlns:f="sap.f" xmlns:macros="sap.fe.macros" xmlns:form="sap.ui.layout.form" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="ns.demoapp.controller.App" displayBlock="true">
   

        <App id="app001">
            <pages><Page id="page" title="{i18n>title}">

     

        <customHeader>
            
    
        <Bar>
            
            
       
            <contentMiddle>
            <Title text="Welcome to {i18n>home}" textAlign="Center" level="H1" titleStyle="H3">
            </Title>


            </contentMiddle>

            <contentRight>
                <Button text="Employee Details" busy="true" busyIndicatorDelay="2" class="sapUiLargeMargin" press=".empdetails"/>
            </contentRight>
        

        
        </Bar>
    </customHeader>

    <content><form:SimpleForm editable="true" layout="ResponsiveGridLayout">

        <Bar>
            <contentMiddle>
                <Title text="Register" textAlign="Initial" width="55%" textDirection="Inherit" wrappingType="Normal" titleStyle="H4" />
            </contentMiddle>
        </Bar>


    

        <form:content >

    

        <Label text="First Name" required="true" vAlign="Bottom"/>
        <Input id="firstname" placeholder="Enter your First Name" width="45%"/>

        <Label text="Last Name" required="true"/>
        <Input id="lastname" placeholder="Enter your Last Name" width="45%"/>

        <Label text="DOB" required="true"/>
        <Input id="dob" placeholder="Enter your Last Name" width="45%" type=""/>

        <Label text="Create Password" required="true"/>
        <Input id="password" placeholder="Create a password" width="45%" type="Password"/>

        <Label text="Email" required="true"/>
        <Input id="email" placeholder="Enter your Email" width="45%" type="Email"/>

        <Label text="Mobile" required="true"/>
        <Input id="mobile" placeholder="Enter your Mobile Number" width="45%"/>

        <Label text="Admin" required="true"/>
        
        <CheckBox xmlns="sap.m" text="Admin" selected="false" id="box0"  />
        <CheckBox xmlns="sap.m" text="View" selected="false" id="box1"/>

   

        

    


        </form:content>
        
      

  

        
        </form:SimpleForm>
    </content>

    <Button id="button001" width="20%" text="Save" press="save" textDirection="Inherit" type="Ghost">

    </Button>

    <Button id="button002" width="20%" text="View" press="view" textDirection="Inherit" type="Neutral">

    </Button>
        

    </Page>

    </pages>
</App>

   

    
</mvc:View>